.container {
  position: relative;
  margin-bottom: 122rpx;
}
.swiper-box {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  box-sizing: border-box;
  box-shadow: 0 0 25rpx 0 rgba(57, 87, 135, 0.11);
}

.swiper-box swiper {
  width: 100%;
  height: 350rpx;
}

.swiper-box swiper image {
  width: 100%;
  height: 100%;
  vertical-align: middle;
  background-color: #eee;
}

.swiper-box .dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.swiper-box .dots .dot {
  margin: 0 5rpx;
  width: 10rpx;
  height: 10rpx;
  background-color: rgba(255, 255, 255, 0.6);
  border-radius: 8rpx;
  transition: all 0.5s;
}

.swiper-box .dots .dot.active {
  width: 40rpx;
  background-color: #fff;
}
.content {
  padding: 30rpx;
}
.content .p{
  display: flex;
  flex-wrap: wrap;
  line-height: 50rpx;
  color: #333;
}
.content .p-options {
  display: inline-flex;
  flex-wrap: wrap;
}
.p-options .p-options-item+.p-options-item {
  margin-left: 10rpx;
}
.p-title {
  color: #999;
}
.p-name {
  width: 150rpx;
}
.p-value {
  color: #999;
}
.p-price {
  color: #999;
  text-decoration: line-through;
}
.p-discount {
  font-size: 34rpx;
  color: red;
}
.stepper {
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.van-goods-action {
  border-top: 1px solid #e6e6e6;
}
.total-money {
  margin-right: 30rpx;
  margin-left: 20rpx;
  height: 122rpx;
  line-height: 122rpx;
  font-size: 28rpx;
  color: #999;
}
.total-money .money {
  font-size: 34rpx;
  color: #e03f44;
}
.van-goods-action-button--last {
  margin-right: 20rpx !important;
}
.cart-enter {
  position: fixed;
  top: 50%;
  right: 20rpx;
  z-index: 9;
}