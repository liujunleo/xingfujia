page {
  background: #f7f7f7;
}

.container {
  /* height: calc(100vh - 200rpx); */
  padding-bottom: 100rpx;
  /* overflow: scroll; */
}

.container-head {
  margin-bottom: 30rpx;
  padding: 40rpx 60rpx;
  display: flex;
  flex-direction: column;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #666;
  background: #fff;
  box-shadow: 0 0 20rpx 0 rgba(70, 117, 230, 0.12);
}

.container-head .title {
  margin-bottom: 10rpx;
  color: #999;
}

.content {
  background: #fff;
}

.canvas-head {
  height: 72rpx;
  line-height: 72rpx;
  background: rgba(241, 241, 241, 1);
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  font-weight: 400;
}

.canvas-title {
  color: rgba(26, 27, 28, 1);
  font-family: PingFangSC-Regular, PingFang SC;
}

.head-right {
  flex-basis: 60%;
  display: flex;
  justify-content: space-around;
  color: rgba(66, 66, 66, 1);
}

.head-right-item {
  display: flex;
  align-items: center;
}

.count {
  margin: 0 10rpx;
}

.count-up {
  color: #3e7600;
}

.count-down {
  color: #d0021b;
}

.triangle {
  width: 0;
  height: 0;
  border: 10rpx solid;
  position: relative;
  top: -10%;
}

.triangle-up {
  border-color: transparent transparent #3e7600;
}

.triangle-down {
  border-color: transparent transparent #d0021b;
}

.echarts-container {
  height: 355.8px;
  padding-bottom: 30rpx;
}

.no-power-container {
  text-align: center;
  padding: 72rpx 0;
  box-sizing: border-box;
}

.no-power-container image {
  width: 466rpx 406rpx;
}

.container-reminder-header {
  padding: 40rpx;
  background: #fff;
  box-shadow: 0 0 20rpx 0 rgba(70, 117, 230, 0.12);
}

.container-reminder-header .form-btn {
  width: 100%;
  display: flex;
  justify-content: flex-end;
}
.container-reminder-header  .btn-large{
  width: 200rpx !important;
}
.btn .van-button--default {
  height: 60rpx;
  font-size: 28rpx;
}
.form-reminder {
  margin-bottom: 20rpx;
}

.form-reminder .textarea {
  min-height: 200rpx !important;
  padding: 20rpx 10rpx;
  font-size: 28rpx;
  font-weight: normal;
}

.form-reminder .van-cell {
  background: #f7f7f7 !important;
}
.reminder-title {
  margin-top: 20rpx;
  padding: 20rpx 50rpx 10rpx 50rpx;
}
.message-item {
  margin: 30rpx 50rpx;
  padding: 30rpx;
  background: #fff;
  border-radius:10rpx;
}
.message-item-content {
  font-size: 26rpx;
  color: #666;
  text-indent: 50rpx;
}
.message-item-datetime {
  text-align: right;
  font-size: 24rpx;
  color: #999;
}
.container.whitebg {
  background: #fff;
}