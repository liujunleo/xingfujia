page {
  background-color: #e5e5e5;
}

.container {
  background-color: #fff;
  box-shadow: 0 0 20rpx 0 rgba(70, 117, 230, 0.12);
}

.form {
  padding: 0 50rpx 50rpx;

}

.block {
  width: 100%;
  height: 20rpx;
  background-color: #e5e5e5;
}

.apply {
  display: block;
  margin: auto;
  margin-top: 40rpx;
}

.slogan {
  margin-top: 30rpx;
  font-size: 22rpx;
  color: #999;
  text-align: center;
}

.input-box {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}

.money-flag {
  font-size: 36rpx;
  font-weight: bold;
}

.money-input {
  flex: 1;
}