.container-album {
  padding: 40rpx 0;
}
.album-item {
  margin-bottom: 40rpx;
  padding: 0 40rpx;
}
.album-item-date {
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: #666;
}
.album-item-photos {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.album-item-photos:after{
  content: '';
  width: 200rpx;
}
.photo-item {
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
}
.photo-item .photo {
  margin-bottom: 10rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.btn-none {
  width: auto !important;
  height: auto;
  margin: 0 !important;
  padding: 0;
  display: inline-flex;
  font-weight: normal;
  line-height: auto;
  border: 0;
  background-color: #fff;
}

.btn-none__hover {
  opacity: 0.7;
}