.goods-item {
  width: 100%;
  display: inline-flex;
  flex-direction: column;
  padding: 20rpx;
  font-weight: normal;
  border: 1px solid #eee;
}
.content {
  display: inline-flex;
  flex-direction: column;
  align-items: flex-start;
}
.photo {
  width: 100%;
  height: 200rpx;
  margin: auto;
}
.name {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
}
.price, .discount{
  font-size: 24rpx;
  color: #666;
}
.price text{
  color: #999;
  text-decoration: line-through;
}
.discount text{
  color: red;
}

.btn-none {
  width: 100% !important;
  height: auto;
  margin: 0;
  padding: 0;
  display: inline-flex;
  line-height: auto;
  border: 0;
  background-color: #fff;
}

.btn-none__hover {
  background-color: #f7f7f7 !important;
}