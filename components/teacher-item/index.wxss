.teacher-item {
  position: relative;
  width: 100%;
  padding: 40rpx 50rpx;
  display: flex;
  font-size: 20rpx;
  color: #666;
  box-sizing: border-box;
}

.teacher-item .teacher-cover {
  flex-shrink: 0;
  width: 210rpx;
  height: 218rpx;
  margin-right: 35rpx;
  border-radius: 15rpx;
  vertical-align: middle;
  background-color: #f7f7f7;
}

.teacher-item .teacher-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
}
.teacher-item .teacher-info view {
  width: 100%;
  line-height: 35rpx;
  text-align: left;
}
.teacher-item .teacher-info .teacher-name {
  font-size: 32rpx;
  color: #333;
  line-height: 45rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.teacher-certificate{
  display: flex;
}

.teacher-certificate .certificate-item{
  height: 34rpx;
  margin: 0;
  padding: 0 8rpx;
  font-size: 18rpx;
  line-height: 2;
  color: #fff;
}
.teacher-certificate .c1 {
  background-color:#fd98bc;
}
.teacher-certificate .c2 {
  background-color:#a3e0e5;
}
.teacher-certificate .c3 {
  background-color:#eaa4ab;
}
.teacher-certificate .certificate-item+.certificate-item{
  margin-left: 10rpx;
}
.operation {
  margin-top: 15rpx;
  display: flex;
  justify-content: space-between;
}
.operation .operation-item {
  width: 190rpx;
  margin: 0;
  font-size: 26rpx;
  color: #fff;
  border: 1px solid #ea9c20;
  border-radius: 28rpx;
  background: linear-gradient(90deg, #e89b32 0%, #f8ac40 100%);
}
.operation .onlinetalk {
  color: #ea9c20;
  border: 1px solid #ea9c20;
  background: #fff;
}
.btn-none {
  width: 100% !important;
  height: auto;
  margin: 0;
  padding: 0;
  display: flex;
  line-height: auto;
  border: 0;
  background-color: #fff;
}

.btn-none__hover {
  opacity: 0.7;
}