.service-item {
  width: 100%;
  display: inline-flex;
  flex-direction: column;
  padding: 20rpx;
  font-weight: normal;
  border: 1px solid #eee;
}
.content {
  display: inline-flex;
  flex-direction: column;
  align-items: flex-start;
}
.photo {
  width: 100%;
  height: 130rpx;
  margin: auto;
}
.name {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
}

.desc{
  font-size: 24rpx;
  color: #999;
}

.btn-none {
  width: 100% !important;
  height: auto;
  margin: 0;
  padding: 0;
  display: inline-flex;
  line-height: auto;
  border: 0;
  background-color: #fff;
}

.btn-none__hover {
  background-color: #f7f7f7 !important;
}